<div class="table-responsive">
  <table class="table table-striped">
	<thead>
		<th>#</th>
		<th>Name</th>
		<th>Stars</th>
		<th>Forks</th>
		<th>Commits</th>
		<th>Authors</th>
		<th>Issues</th>
	</thead>
	<tbody>
	<% @repositories.each_with_index { |repo, i| %>
		<tr>
			<td><%= i+1 %></td>
			<td><%= repo.name %></td>
			<td><%= repo.stars %></td>
			<td><%= repo.forks %></td>
			<td><%= repo.commits %></td>
			<td><%= repo.authors %></td>
			<td><%= repo.issues %></td>
		</tr>
	<% } %>
	</tbody>
  </table>
</div>